  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true
  },
  "exclude": [
    "src/**/*.test.ts"
  ]
}